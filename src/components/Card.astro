---
interface Props {
	name: string;
	url_photo: string;
	url_link: string;
}

const { name, url_link, url_photo } = Astro.props;
---

<li
  class="link-card flex flex-col max-w-[80%] md:w-64 scale-125 mb-16 rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-135 hover:bg-gray-700 hover:border-gray-500 transition mx-auto"
>
  <img
    class="aspect-video object-cover duration-300 group-hover:scale-[1.03] -z-10 transition-transform inline-block w-full"
    src=`${url_photo}`
    alt=""
  />
  <h2 class="text-center text-white font-bold text-xl mt-4 mb-2">
    {name}
  </h2>
  <button
    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2"
  >
    <a href=`${url_link}`>GO</a>
  </button>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
